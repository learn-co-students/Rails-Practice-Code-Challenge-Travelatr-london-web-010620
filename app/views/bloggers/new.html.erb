<% if @blogger.errors.full_messages.length > 0 %>
  <!-- Iterate through the full messages of each error attached to the instance of pet and create a li for each one with the value of the error message injected into it. -->
  <h2><%= pluralize(@blogger.errors.full_messages.length , "error") %> prohibited this pet from being created:</h2>
  <ul>
    <% @blogger.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label "Name:" %>
<%= f.text_field :name %>
<%= f.label "Age:" %>
<%= f.text_field :age %>
<%= f.label "Bio:" %>
<%= f.text_area :bio %>
<%= f.submit %>
<%end%>

