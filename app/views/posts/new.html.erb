<% if @post.errors.full_messages.length > 0 %>
  <!-- Iterate through the full messages of each error attached to the instance of pet and create a li for each one with the value of the error message injected into it. -->
  <h2><%= pluralize(@post.errors.full_messages.length , "error") %> prohibited this pet from being created:</h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
<%= f.label "Title:" %>
<%= f.text_field :title %>
<%= f.label "Content:" %>
<%= f.text_field :content %>
<%= f.hidden_field :likes, value: 0 %>
<%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %>
<%= f.collection_select(:destination_id, Destination.all, :id, :name) %>
<%= f.submit %>
<%end%>